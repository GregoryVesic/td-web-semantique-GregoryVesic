                <th>Réponse</th>
            </tr>
            <tr>
                <td width="300"><center> <%= res[i].email %> </center></td>
                <td><center><img src=<%= res[i].picture %> height="60" width="60"></center></td>
                <td width="100"><center><input type="text" name=<%= wname %> value= <%= res[i].response %>></center></td>
            </tr>
            </table>
        <% } %>
            <center><input type="submit" name="btn"></center>
        </form>
